{
    "name": "Starcraft 2 Streams",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Get the list of streamers and displayed by race",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "https://api.twitch.tv/*",
        "notifications",
        "storage",
        "alarms"
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
